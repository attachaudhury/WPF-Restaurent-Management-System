<Window x:Class="RIAB_Restaurent_Management_System.Views.kitchen.Form_ManageKitchenInventoryCategories"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kitchen Inventory Categories" Height="401.94" Width="770.738" WindowStartupLocation="CenterScreen">
    <Grid>
        <DataGrid x:Name="dg_AllCategories" HorizontalAlignment="Left" Margin="357,23,0,0" VerticalAlignment="Top" Height="321" Width="253">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Category Name" Binding="{Binding Name}" Width="250" Foreground="#FF151515"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Click="btn_AddNewCaterory" Content="New" HorizontalAlignment="Left" Margin="91,165,0,0" VerticalAlignment="Top" Width="111" Background="#FF70CF7D"/>
        <Button Click="btn_DeleteCaterory" Content="Delete" HorizontalAlignment="Left" Margin="641,170,0,0" VerticalAlignment="Top" Width="100" Background="#FFFF7575"/>
        <Button Click="btn_UpdateCaterory" Content="Edit" HorizontalAlignment="Left" Margin="641,218,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="tb_Name" HorizontalAlignment="Left" Margin="26,109,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="246"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="24,82,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
