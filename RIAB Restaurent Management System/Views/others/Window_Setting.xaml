        <Label Content="Settings" FontSize="22" HorizontalAlignment="Left" Margin="55,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Page Width" HorizontalAlignment="Left" Margin="55,69,0,0" VerticalAlignment="Top" Height="30"/>
        <TextBox  Name="tb_PageWidth" HorizontalAlignment="Left" Height="30" Margin="155,63,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="83"/>
        <Label Content="Margin Left" HorizontalAlignment="Left" Margin="262,69,0,0" VerticalAlignment="Top" Height="30"/>
        <TextBox Name="tb_MarginLeft" HorizontalAlignment="Left" Height="30" Margin="354,63,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="110"/>
        <Label Content="Admin Pass" HorizontalAlignment="Left" Margin="494,69,0,0" VerticalAlignment="Top" Height="30"/>
        <TextBox Name="tb_AdminPassword" HorizontalAlignment="Left" Height="30" Margin="589,63,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="103"/>
