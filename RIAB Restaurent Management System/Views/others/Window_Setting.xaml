        <TextBox Name="tb_SubTitle" HorizontalAlignment="Left" Height="30" Margin="155,190,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="534"/>
        <Label Content="Footer" HorizontalAlignment="Left" Margin="55,261,0,0" VerticalAlignment="Top" Height="30"/>
        <TextBox Name="tb_Footer" HorizontalAlignment="Left" Height="30" Margin="155,255,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="534"/>
        <Button Content="Save" Click="btn_Save" Background="#FF3FC53F" BorderBrush="DarkGreen" HorizontalAlignment="Left" Margin="280,418,0,0" VerticalAlignment="Top" Width="203" Height="39"/>
        <Label Content="Line Height" HorizontalAlignment="Left" Margin="49,335,0,0" VerticalAlignment="Top" Height="30"/>
        <TextBox x:Name="tb_Reciptlineheight" HorizontalAlignment="Left" Height="30" Margin="155,330,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="534"/>

    </Grid>
</Window>
