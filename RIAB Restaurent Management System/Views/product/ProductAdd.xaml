        <TextBox x:Name="tb_FoodSalePrice" HorizontalAlignment="Left" Height="26" Margin="110,61,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="304"/>
        <CheckBox x:Name="cbx_ManageInventory" Content="Manage Inventory" HorizontalAlignment="Left" Margin="38,164,0,0" VerticalAlignment="Top"/>
        <Button Click="btn_SaveFoodItem" Content="Save" HorizontalAlignment="Left" Margin="284,335,0,0" VerticalAlignment="Top" Width="130"/>
