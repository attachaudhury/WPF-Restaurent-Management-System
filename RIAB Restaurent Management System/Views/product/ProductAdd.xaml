        <Label Content="Name" HorizontalAlignment="Left" Margin="34,22,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tb_FoodItemName" HorizontalAlignment="Left" Height="26" Margin="110,22,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="304"/>
